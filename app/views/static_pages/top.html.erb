<% provide(:title, "Top") %>

<div class="row" id="row">

  <div class="col-md-7">
    <div class="center jumbotron" id="top-main"><!--centerで文字を真ん中にし、jumbotronで角を丸い枠ができる。containerの外側だと全範囲で角は丸くない-->
      <h1 id="top-main-title">CoffeeApp</h1>
      <p>CoffeeAppはコーヒー豆注文ツールです。</p>
      <p>↓↓初めてのご利用↓↓</p>
      <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %><!--lgサイズで緑色のアカウント作成ボタンが表示され、新規作成のページへ移動する。-->
    </div>
  </div>
  <div class="col-md-4">
    <h1>ログイン</h1>
    <%= form_with(scope: :session,url: login_path, local: true) do |f| %>
      <% if logged_in? %>

        <%= f.label :email, class: 'label-form' %>
        <%= f.email_field :email, class: 'form-control', readonly: true %>

        <%= f.label :password, class: 'label-form' %>
        <%= f.password_field :password, class: 'form-control', readonly: true %>

        <%= f.submit "ログイン状態です", class: "btn btn-primary btn-block btn-form", disabled: "disabled" %>
      <% else %>

        <%= f.label :email, class: "label-form" %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, class: "label-form" %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remenmber-me" do %>
          <%= f.check_box :remember_me, id: "remember-me" %>
          <span>ログイン情報を記憶する</span>
        <% end %>

        <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-form" %>
      <% end %>
    <% end %>
  </div>
</div>
 